<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter the Amount : "
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/inputET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:hint="1000 TK "
        android:textSize="18sp"
        android:textAlignment="center"
        android:inputType="number"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RadioButton
            android:id="@+id/tkTodollarRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taka to Dollar"
            android:textSize="18sp"
            android:checked="true"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/dollarTotkRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dollar to Taka"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/tkTopoundRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taka to Pound"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/poundTotkRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pound to Taka"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/tkToeuroRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taka to Euro"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/euroTotkRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Euro to Taka"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/tkTorupeeRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taka to Rupee"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rupeeTotkRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Rupee to Taka"
            android:layout_weight="1"/>

    </RadioGroup>

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/convertBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Convert"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:padding="10dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>

</ScrollView>